@inherits BaseComponent

<MudText Class="mb-3" Typo="Typo.h4">@Title</MudText>
<ApexChart TItem="ChartDataPoint" @ref="Chart" OnDataPointSelection="OnChartItemSelected" Options="@Options" Width="750" Height="325">
    <ApexPointSeries TItem="ChartDataPoint" Items="@Data.LeftStackData" Name="@(Data.LeftStackName)" SeriesType="SeriesType.Bar"
        XValue="@(e => e.Name)" YValue="@(e => e.Value)" PointColor="(e => e.Color)" ShowDataLabels />
    <ApexPointSeries TItem="ChartDataPoint" Items="@Data.RightStackData" Name="@(Data.RightStackName)" SeriesType="SeriesType.Bar"
        XValue="@(e => e.Name)" YValue="@(e => e.Value)" PointColor="(e => e.Color)" ShowDataLabels />
</ApexChart>
