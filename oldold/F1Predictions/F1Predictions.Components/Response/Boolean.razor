@inherits BaseComponent

@if (State is true)
{
    <MudAvatar Color="MudBlazor.Color.Success" Variant="Variant.Filled">
        <MudIcon Color="MudBlazor.Color.Dark" Icon="@Icons.Filled.Check" Size="Size.Large" />
    </MudAvatar>
}
else
{
    <MudAvatar Color="MudBlazor.Color.Error" Variant="Variant.Filled">
        <MudIcon Color="MudBlazor.Color.Dark" Icon="@Icons.Filled.Close" Size="Size.Large" />
    </MudAvatar>
}
