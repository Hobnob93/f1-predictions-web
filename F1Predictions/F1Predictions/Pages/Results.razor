@page "/results"

<PageTitle>F1 Predictions 2022 - Results</PageTitle>

<MudLayout>
    <SectionBar Title="Introduction" />
    <SideBar />

    <MudContainer id="core-container" MaxWidth="MaxWidth.ExtraExtraLarge">
        <TitleBar />

        <MudPaper id="question-container" Class="pa-4 d-flex flex-column justify-start gap-4" Elevation="0">
            <MudChip id="question-chip" Class="mt-n4">Welcome, everyone! Another season has gone, and with that comes another conclusion to our predictions! I hope you're ready to laugh at your younger self for making such foolish predictions. Good luck!</MudChip>

            <MudGrid Spacing="1">
                @for (var i = 0; i < CompetitorsService.Data.Count; i++)
                {
                    var competitor = CompetitorsService.Data[i];

                    <ResponseContainer Index="@i">
                        <Competitor Initials="@competitor.Id" Color="@competitor.Color"/>
                        <Text Content="@($"{competitor.Name} A.K.A. '{competitor.Nickname}'")" Color="@competitor.Color" UseDarkText="@competitor.UseDarkText" />
                        <Car TeamId="@competitor.LiveryId" />
                    </ResponseContainer>
                }
            </MudGrid>

            <MudPaper Class="d-flex flex-column justify-center align-content-center align-center" Elevation="0">
                <MudText Typo="Typo.h3">Favourite Liveries</MudText>
                <MudChart ChartType="ChartType.Donut" LegendPosition="Position.End" Width="300px" Height="300px" InputLabels="@FavouriteLabels" InputData="@FavouriteData" ChartOptions="@ChartOptions" />
            </MudPaper>
        </MudPaper>
    </MudContainer>
</MudLayout>
