@inherits QuestionContent

<CompetitorResponses>
    <CompetitorTemplate Context="competitor">
        @{
            var response = GetCompetitorAnswers(competitor.Id);
        }
        <Tracks TrackIds="@response" Color="@competitor.Color" UseDarkText="@competitor.UseDarkText" />
    </CompetitorTemplate>
</CompetitorResponses>

<MudPaper Class="d-flex flex-column justify-center align-content-center align-center" Elevation="0">
    <BarChart Title="Responses" Data="@ResponseData" SelectionCallback="OnSelectedChartDataPoint" @ref="RefreshableChart" />
</MudPaper>
