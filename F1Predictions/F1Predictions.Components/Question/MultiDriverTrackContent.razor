@inherits QuestionContent

<CompetitorResponses>
    <CompetitorTemplate Context="competitor">
        @{
            var responses = GetCompetitorAnswers(competitor.Id);
        }

        @foreach (var response in responses)
        {
            <div class="@GetDriverTrackContainerClasses(competitor.IsRightAligned)">
                <Driver Class="@GetDriverClasses(competitor.IsRightAligned)" DriverId="@response.DriverId" />
                <Track Class="@GetTrackClasses(competitor.IsRightAligned)" TrackId="@response.TrackId" Size="Size.Small" Color="@competitor.Color" UseDarkText="@competitor.UseDarkText" />
            </div>
        }
    </CompetitorTemplate>
</CompetitorResponses>

<MudPaper Class="d-flex flex-column justify-center align-content-center align-center" Elevation="0">
    <BarChart Title="Responses" Data="@ResponseData" SelectionCallback="OnSelectedChartDataPoint" />
</MudPaper>
