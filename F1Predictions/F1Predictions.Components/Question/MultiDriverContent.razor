@inherits QuestionContent

<CompetitorResponses>
    <CompetitorTemplate Context="competitor">
        @{
            var response = GetCompetitorAnswers(competitor.Id);
        }
        <Drivers DriverIds="@response" />
    </CompetitorTemplate>
</CompetitorResponses>

<MudPaper Class="d-flex flex-column justify-center align-content-center align-center" Elevation="0">
    <PieChartOld Title="Responses" Data="@ResponseData" Options="@ChartOptions" SelectedIndex="@_selectedChartIndex" SelectedIndexChanged="@OnSelectedChartIndex" />
</MudPaper>
