@inherits QuestionContent

<CompetitorResponses>
    <CompetitorTemplate Context="competitor">
        <Car TeamId="@(AnswerService.GetCompetitorAnswerRaw(competitor.Id))" />
        <Text Content="@($"{competitor.Name} A.K.A. '{competitor.Nickname}'")" Color="@competitor.Color" UseDarkText="@competitor.UseDarkText" />
    </CompetitorTemplate>
</CompetitorResponses>

<MudPaper Class="d-flex flex-column justify-center align-content-center align-center" Elevation="0">
    <PieChartOld Title="Favourite Liveries" Data="@ResponseData" Options="@ChartOptions" SelectedIndex="@_selectedChartIndex" SelectedIndexChanged="@OnSelectedChartIndex" />
</MudPaper>
