@inherits QuestionContent

<CompetitorResponses>
    <CompetitorTemplate Context="competitor">
        @{
            var response = Responses.GetResponseForComp(competitor.Id);
        }
        <Track TrackId="@response.Id" Color="@competitor.Color" UseDarkText="@competitor.UseDarkText" />
    </CompetitorTemplate>
</CompetitorResponses>

<MudPaper Class="d-flex flex-row justify-space-around align-content-center align-center gap-14" Elevation="0">
    <MudPaper Class="d-flex flex-column justify-center align-content-center align-center" Elevation="0">
        <PieChart Title="Responses" Data="@ResponseData" SelectionCallback="OnSelectedChartDataPoint" @ref="ResponsesChart" />
    </MudPaper>
    <DynamicAnswer @ref="AnswersSection" />
</MudPaper>
