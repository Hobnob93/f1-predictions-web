@inherits BaseComponent

<MudGrid Spacing="2" Class="@Classes" Style="@Style" UserAttributes="@UserAttributes">
    @foreach (var competitor in CompetitorsService.Data)
    {
        var starredNote = CompetitorHasNote(competitor.Id);

        <ResponseContainer Color="@competitor.Color" IsRightAligned="@competitor.IsRightAligned" OnClicked="async () => await OnResponseClicked(competitor.Id)" IsShowingContent="@competitor.IsShowingContent">
            <Competitor Initials="@competitor.Id" Color="@competitor.Color" StarredNote="@starredNote" />
            @CompetitorTemplate(competitor)
        </ResponseContainer>
    }
</MudGrid>
