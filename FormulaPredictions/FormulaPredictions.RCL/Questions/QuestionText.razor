@inherits BaseRclComponent

@if (Scoring is not null)
{
    <MudTooltip Text="@Scoring" Arrow="true" Placement="Placement.Bottom" Color="MudBlazor.Color.Primary" Duration="500" Delay="200" Style="width:100%;">
        <MudChip Class="@Classes" Style="@Style" UserAttributes="@UserAttributes">@Text</MudChip>
    </MudTooltip>
}
else
{
    <MudChip Class="@Classes" Style="@Style" UserAttributes="@UserAttributes">@Text</MudChip>
}
