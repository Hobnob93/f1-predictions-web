@inherits BaseRclComponent

<MudGrid Spacing="3" Class="@Classes" Style="@Style" UserAttributes="@UserAttributes">
    @foreach (var competitor in _competitors)
    {
        <ResponseContainer 
                CompId="@competitor.Id" 
                Color="@competitor.Color" 
                IsRightAligned="@IsCompetitorRightAligned(competitor)" 
                Score="@GetCompetitorScore(competitor)"
                OnClicked="() => CompetitorClicked(competitor)" 
                IsShowingContent="@CompetitorIsShowingContent(competitor)"
                IsFinalQuestion="@_isFinalQuestion">
            <CompetitorAvatar 
                    Initials="@GetCompetitorInitials(competitor)"
                    Color="@GetCompetitorColor(competitor)"
                    StarredNote="@GetCompetitorNote(competitor.Id)" />

            @if (CompetitorTemplate is not null)
            {
                <MudSpacer />
                @CompetitorTemplate(competitor)
                <MudSpacer />
            }
        </ResponseContainer>
    }
</MudGrid>
