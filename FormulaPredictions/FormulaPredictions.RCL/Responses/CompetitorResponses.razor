@inherits BaseRclComponent

<MudGrid Spacing="3" Class="@Classes" Style="@Style" UserAttributes="@UserAttributes">
    @foreach (var competitor in Competitors)
    {
        <ResponseContainer CompId="@competitor.Id" Color="@competitor.Color" IsRightAligned="@competitor.IsRightAligned" Score="@GetCompetitorScore(competitor)"
                OnClicked="() => CompetitorClicked(competitor)" IsShowingContent="@CompetitorIsShowingContent(competitor)">
            <CompetitorAvatar Initials="@competitor.Id" Color="@competitor.Color" StarredNote="@GetCompetitorNote(competitor.Id)" />

            @if (CompetitorTemplate is not null)
            {
                <MudSpacer />
                @CompetitorTemplate(competitor)
                <MudSpacer />
            }
        </ResponseContainer>
    }
</MudGrid>
