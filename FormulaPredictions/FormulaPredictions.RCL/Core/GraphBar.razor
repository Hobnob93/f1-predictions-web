@inherits BaseRclComponent

<MudAppBar Bottom="true" Fixed="true" Color="@BarColor" Elevation="0" ToolBarClass="d-flex flex-column" Style="@Styles">
    <MudSpacer />
    <div class="w-100 mt-2">
        <div class="d-flex flex-row w-100">
            <MudSpacer />
            <MudIconButton Icon="@OpenIcon" OnClick="Toggle" Color="MudBlazor.Color.Primary" />
            <MudSpacer />
        </div>

        <div class="d-flex flex-row w-100">
            @if (Open)
            {
                <DynamicComponent Type="@GraphTemplate" />
            }
        </div>
    </div>
    <MudSpacer />
</MudAppBar>
