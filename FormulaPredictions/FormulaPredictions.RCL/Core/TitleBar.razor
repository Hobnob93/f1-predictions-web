<MudAppBar id="title-bar" Elevation="0" Fixed="false" Dense="true" Color="MudBlazor.Color.Info">
    <MudText Typo="Typo.h5">@GetQuestionGroupName()</MudText>

    <MudSpacer />

    <MudButton Variant="Variant.Text" Class="me-4 mt-1" Color="MudBlazor.Color.Primary" OnClick="OnQuestionIdClicked">@GetQuestionId()</MudButton>

    <MudIconButton id="btn-back" Color="MudBlazor.Color.Primary" Icon="@Icons.Material.Filled.ArrowCircleLeft" Size="MudBlazor.Size.Large" Disabled="@(!CanGoBack())" OnClick="OnBackClicked" />
    <MudIconButton id="btn-next" Color="MudBlazor.Color.Primary" Icon="@Icons.Material.Filled.ArrowCircleRight" Size="MudBlazor.Size.Large" Disabled="@(!CanGoForward())" OnClick="OnForwardClicked" />
</MudAppBar>
