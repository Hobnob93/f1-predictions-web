<MudDialog>
    <DialogContent>
        <MudPaper Elevation="0" Class="d-flex flex-column gap-0">
            @foreach (var group in QuestionGroups)
            {
                <MudPaper Elevation="0" Class="d-flex flex-row justify-center gap-0">
                    @foreach (var question in group)
                    {
                        <MudPaper Elevation="0" Width="60px" Height="60px">
                            <MudButton Variant="Variant.Text" Class="me-4 mt-1" Color="MudBlazor.Color.Primary"
                                OnClick="(e) => OnQuestionSelected(question)">@question.Id</MudButton>
                        </MudPaper>
                    }
                </MudPaper>
            }
        </MudPaper>
    </DialogContent>

    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
    </DialogActions>
</MudDialog>