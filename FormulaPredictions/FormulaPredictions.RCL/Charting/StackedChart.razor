<ApexChart TItem="ChartDataPoint" @ref="Chart" OnDataPointSelection="OnChartItemSelected" Options="@Options" Width="750" Height="325">
    <ApexPointSeries TItem="ChartDataPoint" Items="@Data.TopStackData" Name="@(Data.TopStackName)" SeriesType="SeriesType.Bar"
                     XValue="@(e => e.Name)" YValue="@(e => e.Value)" PointColor="(e => e.Color)" ShowDataLabels />
     <ApexPointSeries TItem="ChartDataPoint" Items="@Data.BottomStackData" Name="@(Data.BottomStackName)" SeriesType="SeriesType.Bar"
                      XValue="@(e => e.Name)" YValue="@(e => e.Value)" PointColor="(e => e.Color)" ShowDataLabels />
 </ApexChart>
