@inherits BaseRclComponent

<ApexChart TItem="MultiBarChartDataPoint" @ref="Chart" OnDataPointSelection="OnChartItemSelected" Options="@Options" Width="750" Height="325">

    @foreach (var data in Data.DataPoints)
    {
        <ApexPointSeries TItem="MultiBarChartDataPoint" Items="@data" Name="@data.First().Name" SeriesType="SeriesType.Bar"
                         XValue="@(e => e.XValue)" YValue="@(e => e.Value)" PointColor="(e => e.Color)" />
    }

</ApexChart>