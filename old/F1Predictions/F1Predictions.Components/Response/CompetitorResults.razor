@inherits BaseComponent

<MudGrid Spacing="2" Class="@Classes" Style="@Style" UserAttributes="@UserAttributes">
    @foreach (var competitor in Competitors)
    {
        var initials = competitor.IsShowingContent ? competitor.Id : (competitor.Index + 1).ToString();
        var color = competitor.IsShowingContent ? competitor.Color : "#FFFFFF";

        <ResultContainer Color="@color" IsRightAligned="@competitor.IsRightAligned" OnClicked="async () => await OnResponseClicked(competitor.Id)" IsShowingContent="@competitor.IsShowingContent">
            <Competitor Initials="@initials" Color="@color" />
            <Text Content="@ScoreManager.GetTotalScore(competitor.Id).ToString()" Color="@competitor.Color" UseDarkText="@competitor.UseDarkText" />
            @CompetitorTemplate(competitor)
        </ResultContainer>
    }
</MudGrid>
