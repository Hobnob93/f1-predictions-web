@inherits QuestionContent

<CompetitorResponses>
    <CompetitorTemplate Context="competitor">
        <Car TeamId="@(Responses.GetResponseForComp(competitor.Id).Id)" />
        <Text Content="@($"{competitor.Name} A.K.A. '{competitor.Nickname}'")" Color="@competitor.Color" UseDarkText="@competitor.UseDarkText" />
    </CompetitorTemplate>
</CompetitorResponses>

<MudPaper Class="d-flex flex-column justify-center align-content-center align-center" Elevation="0">
    <PieChart Title="Favourite Liveries" Data="@ResponseData" SelectionCallback="OnSelectedChartDataPoint" @ref="ResponsesChart" />
</MudPaper>
